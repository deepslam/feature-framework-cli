{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017", "es2015", "dom", "es6"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/index.ts", "package.json"],
  "exclude": ["node_modules", "firefunctions", "dist"]
}
